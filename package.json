{
    "name": "ct-saas",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "lerna exec --scope saas-view yarn dev",
        "build": "lerna exec --scope saas-view yarn build",
        "docs:dev": "lerna exec --scope saas-view yarn docs:dev",
        "docs:build": "lerna exec --scope saas-view yarn docs:build"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "husky": "^7.0.4"
    },
    "dependencies": {
        "lint-staged": "^12.3.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "packages/**/src/**/*.{js,vue}": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ]
    }
}
